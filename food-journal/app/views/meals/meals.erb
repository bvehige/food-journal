<% if flash.has?(:created_meal_message) %>
    <%=flash[:created_meal_message] %>
<% end %>
<% if flash.has?(:sign_up_message) %>
    <%= flash[:sign_up_message] %>
<% end %>
<% if flash.has?(:deleted_message) %>
    <%= flash[:deleted_message] %>
<% end %>
<br><br>


<h2>Welcome <%=@user.username%>!</h2>

<h3><%=@user.username%>'s Meal Journal</h3>
<br>
<% if !@user.meals.empty? %> 
    <% @user.meals.each do |meal| %>
        <li><a href = "/meals/<%= meal.id %>"><%= meal.name %></a> - <%= meal.date %> - Rating: <%= meal.rating %></li>
        <br><br>
    <% end %>
    <a href = "/meals/new"><button>Create a New Meal</button></a>
    <br>
<% else %>
    <p>You haven't created any meals yet in your journal.  <a href = "/meals/new"><button>Create a New Meal</button></a><br> 
    </p>
<% end %>
    <br>


<a href = "/logout"><button>Log Out</button></a>