
<h2>Welcome <%=@user.username%>!</h2>

<h3><%=@user.username%>'s Meal Journal</h3>
<br>
<% if !@user.meals.empty? %> 
    <% @user.meals.each do |meal| %>
            <li><a href = "/meals/<%= meal.id %>"><%= meal.name %></a> - <%= meal.date %> - Rating: <%= meal.rating %></li>
    <% end %>
    <br>
    <a href = "/meals/new">Create a New Meal</a>
    <br>
<% else %>
    <p>You haven't created any meals yet in your journal.  <a href = "/meals/new"><button>Create a New Meal</button></a><br> 
    </p>
<% end %>
    <br>
